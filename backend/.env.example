# CodeTunner Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# ====================
# AI Provider API Keys
# ====================

# Google Gemini API Key
# Get yours at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI API Key
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic Claude API Key
# Get yours at: https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ====================
# Server Configuration
# ====================

# Server host (default: 127.0.0.1)
SERVER_HOST=127.0.0.1

# Server port (default: 8080)
SERVER_PORT=8080

# ====================
# AI Configuration
# ====================

# Default AI provider: gemini, openai, or anthropic
DEFAULT_AI_PROVIDER=gemini

# Default AI model
DEFAULT_AI_MODEL=gemini-pro

# AI temperature (0.0 - 1.0)
AI_TEMPERATURE=0.7

# Maximum tokens for AI responses
AI_MAX_TOKENS=2048

# ====================
# Code Execution
# ====================

# Execution timeout in milliseconds (default: 30000)
EXECUTION_TIMEOUT=30000

# Maximum memory for code execution in MB (optional)
# EXECUTION_MAX_MEMORY=512

# ====================
# Logging
# ====================

# Log level: trace, debug, info, warn, error
RUST_LOG=info

# ====================
# Git Configuration
# ====================

# Default Git remote (default: origin)
GIT_DEFAULT_REMOTE=origin

# Auto-fetch interval in seconds (0 to disable)
GIT_AUTO_FETCH_INTERVAL=0

# ====================
# Development
# ====================

# Enable CORS for development (default: true)
DEV_CORS_ENABLED=true

# Enable debug mode
DEBUG_MODE=false
